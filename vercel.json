{
  "version": 2,
  "builds": [
    {
      "src": "api/ocr.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/ocr.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/ocr.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task"
  },
  "functions": {
    "api/ocr.py": {
      "maxDuration": 30
    }
  }
}
